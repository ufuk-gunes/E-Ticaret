@model HomeTicaretCore.Entity.Product

@{
    ViewBag.Title = "Ürün Detayı";
    var isLogin = (bool)ViewBag.IsLogin;
}
<h2>Ürün Detayı</h2>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="productBox" style="height:auto">
                <p class="title"> @Model.Name</p>
                <img src="@Model.ImageUrl" />
                <p>
                    @Model.Brand
                </p>
                <p>
                    @Model.Price.ToString("##,## ₺")
                </p>
                <p>
                    @Model.Description
                </p>
                @{ if (isLogin)
                    {
                        <a href="#" data-pID="@Model.ID" class="btn btn-dark addBasket"><i class="fas fa-shopping-basket"></i>Sepete Ekle</a>
                    }
                }
            </div>
        </div>

    </div>
</div>

