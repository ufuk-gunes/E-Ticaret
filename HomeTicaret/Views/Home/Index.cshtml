@model List<HomeTicaretCore.Entity.Product>
@{
    /**/

    ViewBag.Title = "Index";
    var isLogin = (bool)ViewBag.IsLogin;
}

<h3>Son 5 Ürün</h3>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="productBox">
                        <p class="title"> @item.Name</p>
                        <img src="@item.ImageUrl" />
                        <p>
                            @item.Brand
                        </p>
                        <p>
                            @item.Price.ToString("##,## ₺")
                        </p>
                        <p>
                            @item.Description
                        </p>
                        <a href="/Urun/@item.Name.Replace(" ","-")/@item.ID" class="btn btn-success">İncele</a>
                        @{ if (isLogin)
                            {
                                <a href="#" data-pID="@item.ID" class="btn btn-dark addBasket"><i class="fas fa-shopping-basket"></i>Sepete Ekle</a>
                            }
                        }

                    </div>
                }
            }
        </div>
    </div>
</div>
<div id="appModal" title="Teşekkürler">
    Ürünününz Sepete Eklendi <br />
    <a href="/sepetim" class="btn btn-success">Sepete Git</a>
</div>
<div class="row"></div>
<style>
    .productBox {
        width: 250px;
        float: left;
        margin: 10px;
        border: 2px solid #ff0000;
        padding: 10px;
    }

        .productBox img {
            width: 100%;
        }

        .productBox .title {
            font-weight: bold;
            text-align: center;
        }

        .productBox p {
            text-align: center;
        }
</style>

@section script{
    <script type="text/javascript">
        $(function () {
            $("#appModal").dialog({
                autoOpen: false,
                show: {
                    effect: "blind",
                    duration: 1000
                },
                hide: {
                    effect: "explode",
                    duration: 1000
                }
            });

            $(".addBasket").on("click", function () {

                alert("ok");
                var pid = $(this).attr("data-pID");
                console.log(pid);
                $.post("/Basket/AddProduct?productID=" + pid + "&quantity=1", function (data) {
                    $("#appModal").dialog("open");
                });

                return false;
            });
        });


    </script>
}

