
@{
    ViewBag.Title = "Login";
}

<style>
    .left {
        width: 220px;
        float: left;
        margin:5px;
    }

    .right {
        width: 220px;
        float: left;
    }
</style>

<h2>Üye Giriş Sayfası</h2>
<br/>
@{ 
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
}
<form action="/Uye-Giris" method="post">

    <div class="left">
        @Html.Label("E-Posta Adresiniz:")
    </div>
    <div class="right">
        @Html.TextBox("Email")
    </div>

    <div class="left">
        @Html.Label("Şifreniz:")
    </div>

    <div class="right">
        @Html.Password("Password")
    </div>

    <button type="submit">Giriş Yap</button>


</form>

